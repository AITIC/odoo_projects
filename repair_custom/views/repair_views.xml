<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_repair_order_form_inherit" model="ir.ui.view">
            <field name="name">repair.form.inherit</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='print_repair_order']" position="attributes">
                    <attribute name="states">draft,budget_sent</attribute>
                </xpath>
                <xpath expr="//header/button[@name='action_validate']" position="attributes">
                    <attribute name="states">draft,budget_sent</attribute>
                </xpath>
                <xpath expr="//header/button[9]" position="attributes">
                    <attribute name="states">draft,budget_sent</attribute>
                </xpath>
                <field name="state" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,budget_sent,confirmed,done"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
